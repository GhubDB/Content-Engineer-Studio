#:kivy 2.0

WindowManager:
    MainWindow:
    Options:
    Help:

<MainWindow>:
    name: "main"

    GridLayout:
        cols: 1
        # size_hint: None, None
        size: root.width, root.height
        GridLayout:
            cols: 3
        # width: root.width
        # height: root.height, 
            # padding_bottom: "50dp"
            ScrollView:
                size_hint: None, 1
                width: "25dp"
                bar_width: 4
                Sidebar:
                    size_hint: 1, None
                    height: self.minimum_height
                    color: 1, 0, 0, 1
            ScrollView:
                # scroll_type: 'bars'
                Chat:
                    cols: 1
                    size_hint: 1, None
                    height: self.minimum_height
            #     # size_hint: .4, 1
            #     text: "text"
            #     color: 0.5, 0, 0, 1
            TextInput:
                # size_hint: .4, 1
                text: "Analysis"


        GridLayout:
            cols: 5
            size_hint: None, None
            width: root.width
            height: "30dp"
            Button:
                # size_hint: None, .3
                # width: "70dp"
                text: "Options"
                on_release:
                    app.root.current = "options"
                    # root.manager.transition.direction = "left"
            Button:
                # size_hint: .3, None
                text: "Up"
            Button:
                # size_hint: .3, None
                text: "Save"
            Button:
                # size_hint: .3, None
                text: "Down"
            Button:
                # size_hint: None, .3
                # width: "70dp"
                text: "Help"
                on_release:
                    app.root.current = "help"
                    # root.manager.transition.direction = "left"

<Options>:
    name: "options"

    Button:
        text: "Go Back"
        on_release:
            app.root.current = "main"
            # root.manager.transition.direction = "right"


<Help>:
    name: "help"

    Button:
        text: "Go Back"
        on_release:
            app.root.current = "main"
